<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".CreateTicketPage"
    tools:showIn="@layout/activity_create_ticket_page"
    android:id="@+id/create_ticket_page"
    >
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/content_wrap"
        android:padding="10dp"
        app:layout_constraintTop_toTopOf="@id/content_wrap"
        >
        <TextView
            android:id="@+id/create_ticket_page_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NEW TICKET"
            android:textSize="18sp"
            app:fontFamily="@font/roboto_bold"
            app:layout_constraintStart_toStartOf="@id/content_wrap"
            app:layout_constraintTop_toTopOf="@id/content_wrap"
            />
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ticket_subject_wrap"
            android:padding="10dp"
            app:layout_constraintTop_toBottomOf="@id/create_ticket_page_title"
            app:layout_constraintStart_toStartOf="@id/content_wrap"
            >
            <TextView
                android:id="@+id/ticket_subject"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Subject*"
                android:textSize="18sp"
                app:fontFamily="@font/roboto_bold"
                app:layout_constraintStart_toStartOf="@id/ticket_subject_wrap"
                app:layout_constraintTop_toTopOf="@id/ticket_subject_wrap"
                />
            <EditText
                android:id="@+id/txtTicketSubject"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/guestjini_edit_text"
                android:hint="Subject"
                android:textSize="14sp"
                app:layout_constraintTop_toBottomOf="@id/ticket_subject"
                app:layout_constraintStart_toStartOf="@id/ticket_subject_wrap"
                tools:layout_editor_absoluteX="25dp"
                android:padding="10dp"
                android:layout_marginTop="30dp"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ticket_description_wrap"
            android:padding="10dp"
            app:layout_constraintTop_toBottomOf="@id/ticket_subject_wrap"
            app:layout_constraintStart_toStartOf="@id/content_wrap"
            >
            <TextView
                android:id="@+id/ticket_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Complaint*"
                android:textSize="18sp"
                app:fontFamily="@font/roboto_bold"
                app:layout_constraintStart_toStartOf="@id/ticket_description_wrap"
                app:layout_constraintTop_toTopOf="@id/ticket_description_wrap"
                />
            <EditText
                android:id="@+id/txtTicketDescription"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@drawable/guestjini_edit_text"
                android:hint="Subject"
                android:lines="5"
                android:gravity="top|start"
                android:inputType="textMultiLine"
                android:scrollHorizontally="false" android:lineSpacingExtra="5sp"
                android:textSize="14sp"
                app:layout_constraintTop_toBottomOf="@id/ticket_description"
                app:layout_constraintStart_toStartOf="@id/ticket_description_wrap"
                android:padding="10dp"
                android:layout_marginTop="30dp"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/submitButtonWrap"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            app:layout_constraintTop_toBottomOf="@id/ticket_description_wrap">

            <Button
                android:id="@+id/btnCreateTicket"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:background="@drawable/guestjinibutton"
                android:minWidth="150dp"
                android:padding="10dp"
                android:layout_marginBottom="10dp"
                android:text="Submit"
                android:textColor="#ffffff"
                app:layout_constraintCircle="@id/submitButtonWrap"
                app:layout_constraintEnd_toStartOf="parent"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:menu="@menu/bottom_navigation" />
</androidx.constraintlayout.widget.ConstraintLayout>