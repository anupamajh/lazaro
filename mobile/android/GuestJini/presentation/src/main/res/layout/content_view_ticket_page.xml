<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".ViewTicketPage"
    tools:showIn="@layout/activity_view_ticket_page"
    android:id="@+id/ticket_view_page"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/ticket_head_wrap"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/veryLightPink"
        android:elevation="5dp"
        android:padding="10dp"
        app:layout_constraintTop_toTopOf="@+id/ticket_view_page">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/ticket_head_wrap_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="50dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:id="@+id/ticket_status_wrap"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:background="@color/coral"
                android:elevation="5dp"
                android:padding="5dp"
                app:layout_constraintStart_toStartOf="@+id/ticket_head_wrap_left"
                app:layout_constraintTop_toTopOf="@id/ticket_head_wrap_left">

                <TextView
                    android:id="@+id/ticket_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="OPEN"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    app:fontFamily="@font/roboto" />
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/ticket_head_wrap_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            app:layout_constraintStart_toEndOf="@id/ticket_head_wrap_left"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/ticket_submitted_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Submitted On"
                android:textColor="@color/brownishGrey"
                android:textSize="12sp"
                app:fontFamily="@font/roboto"
                app:layout_constraintStart_toStartOf="@id/ticket_head_wrap_right"
                app:layout_constraintTop_toTopOf="@id/ticket_head_wrap_right" />

            <TextView
                android:id="@+id/ticket_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/brownishGrey"
                android:textSize="12sp"
                app:fontFamily="@font/roboto_bold"
                app:layout_constraintStart_toStartOf="@id/ticket_head_wrap_right"
                app:layout_constraintTop_toBottomOf="@id/ticket_submitted_title" />

            <TextView
                android:id="@+id/ticket_no_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="Ticket #"
                android:textColor="@color/brownishGrey"
                android:textSize="12sp"
                app:fontFamily="@font/roboto"
                app:layout_constraintStart_toStartOf="@id/ticket_head_wrap_right"
                app:layout_constraintTop_toBottomOf="@id/ticket_date" />

            <TextView
                android:id="@+id/ticket_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/brownishGrey"
                android:textSize="12sp"
                app:fontFamily="@font/roboto_bold"
                app:layout_constraintStart_toStartOf="@id/ticket_head_wrap_right"
                app:layout_constraintTop_toBottomOf="@id/ticket_no_title" />
        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/ticket_content_wrap"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="5dp"
        android:padding="10dp"
        app:layout_constraintTop_toBottomOf="@+id/ticket_head_wrap">

    <TextView
        android:id="@+id/ticket_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text=""
        android:textColor="@color/brownishGrey"
        android:textSize="14sp"
        app:fontFamily="@font/roboto_bold"
        app:layout_constraintStart_toStartOf="@id/ticket_content_wrap"
        app:layout_constraintTop_toTopOf="@id/ticket_content_wrap" />

        <TextView
            android:id="@+id/ticket_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text=""
            android:textColor="@color/brownishGrey"
            android:textSize="14sp"
            app:fontFamily="@font/roboto"
            app:layout_constraintStart_toStartOf="@id/ticket_content_wrap"
            app:layout_constraintTop_toBottomOf="@id/ticket_title" />


        <View
        android:id="@+id/ticket_row_divider"
        style="@style/Divider.Horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintTop_toBottomOf="@id/ticket_description" />
    </androidx.constraintlayout.widget.ConstraintLayout>


    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:menu="@menu/bottom_navigation" />

</androidx.constraintlayout.widget.ConstraintLayout>