<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ticket_wrapper"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="15dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/ticket_content_wrap"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/veryLightPink"
        android:elevation="5dp"
        android:padding="10dp"
        app:layout_constraintTop_toTopOf="@+id/ticket_wrapper">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ticket_status_wrap"
            app:layout_constraintStart_toStartOf="@+id/ticket_content_wrap"
            app:layout_constraintTop_toTopOf="@id/ticket_content_wrap"
            android:elevation="5dp"
            android:padding="5dp"
            android:layout_marginBottom="15dp"
            android:background="@color/coral"
            >
            <TextView
                android:id="@+id/ticket_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="OPEN"
                android:textSize="12sp"
                app:fontFamily="@font/roboto"
                android:textColor="@color/white"
               />
        </LinearLayout>

        <TextView
            android:id="@+id/ticket_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="25-03-1981"
            android:textSize="12sp"
            android:layout_marginTop="15dp"
            app:fontFamily="@font/roboto"
            android:textColor="@color/brownishGrey"
            app:layout_constraintStart_toStartOf="@id/ticket_content_wrap"
            app:layout_constraintTop_toBottomOf="@id/ticket_status_wrap" />

        <TextView
            android:id="@+id/ticket_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Elevator is not working"
            android:textSize="14sp"
            android:layout_marginTop="15dp"
            app:fontFamily="@font/roboto_bold"
            android:textColor="@color/brownishGrey"
            app:layout_constraintStart_toStartOf="@id/ticket_content_wrap"
            app:layout_constraintTop_toBottomOf="@id/ticket_date" />

        <View
            android:id="@+id/ticket_row_divider"
            style="@style/Divider.Horizontal"
            app:layout_constraintTop_toBottomOf="@id/ticket_title"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            />

        <TextView
            android:id="@+id/ticket_no_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ticket #"
            android:textSize="12sp"
            android:layout_marginTop="15dp"
            app:fontFamily="@font/roboto"
            android:textColor="@color/brownishGrey"
            app:layout_constraintStart_toStartOf="@id/ticket_content_wrap"
            app:layout_constraintTop_toBottomOf="@id/ticket_row_divider" />

        <TextView
            android:id="@+id/ticket_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="xyzxyz"
            android:textSize="12sp"
            android:layout_marginTop="15dp"
            app:fontFamily="@font/roboto"
            android:textColor="@color/brownishGrey"
            app:layout_constraintStart_toStartOf="@id/ticket_content_wrap"
            app:layout_constraintTop_toBottomOf="@id/ticket_no_title" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>