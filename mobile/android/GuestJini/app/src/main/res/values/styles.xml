<resources>

     Base application theme.
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="AppTheme1" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorAccent">@color/colorSwitchMaterialTrackTint</item>

    </style>
    <style name="AppTheme.RoundedCornerMaterialButton" parent="Widget.MaterialComponents.Button">
        <item name="android:background">@drawable/rounded_shape</item>
    </style>

    <style name="button" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/colorSummerSky</item>
        <item name="cornerRadius">@dimen/login_button_corners_radius</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:letterSpacing">0.10</item>
    </style>
    <style name="button1" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/colorSummerSky</item>
        <item name="android:text">@string/page_title</item>
        <item name="cornerRadius">@dimen/login_button_corners_radius</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:letterSpacing">0.10</item>
    </style>
    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/colorWhite</item>
        <item name="colorControlActivated">@color/colorGoldenGlow</item>
    </style>
    <style name="WhiteCheck">
        <item name="colorAccent">#000</item>
    </style>
</resources>
