<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Spinner
            android:id="@+id/cmbGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rectangle_border"
            android:entries="@array/date_filter_options" />

        <TextView
            android:id="@+id/txtSheetAssignTicketTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/cmbGroup"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="20dp"
            android:text="Select an agent or group from the list above." />

        <Button
            android:id="@+id/btnSheetAssignTicket"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_below="@id/txtSheetAssignTicketTitle"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="12dp"
            android:backgroundTint="@color/colorSummerSky"
            android:text="ASSIGN"
            android:textColor="@color/colorWhite"
            android:textSize="11sp"
            android:visibility="visible"
            app:fontFamily="@font/roboto_bold" />

    </RelativeLayout>
</FrameLayout>