<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:padding="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/layoutCategorySeparator"
            android:layout_width="25dp"
            android:layout_height="20dp"
            android:layout_alignParentStart="true"
            android:background="@drawable/ic_bullet_down_arrow_head"
            android:visibility="visible" />
        <TextView
            android:id="@+id/txtCategoryDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/layoutCategorySeparator"
            android:layout_marginStart="0dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/roboto_bold"
            android:letterSpacing="0.05"
            android:text="INBOX"
            android:textColor="@color/colorGray44"
            android:textSize="12sp" />
    </RelativeLayout>
</FrameLayout>