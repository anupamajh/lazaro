<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ProgressBar
        android:id="@+id/progress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/layoutHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/btnBack"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="32dp"
                android:layout_marginTop="32dp"
                android:contentDescription="@string/back_arrow_icon"
                android:src="@drawable/back_arrow_icon_xxhdpi" />

            <TextView
                android:id="@+id/txtHeaderTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginStart="20dp"
                android:layout_marginTop="32dp"
                android:layout_toEndOf="@+id/btnBack"
                android:letterSpacing="0.1"
                android:text="@string/new_ticket"
                android:textAllCaps="true"
                android:textColor="@color/colorZambezi"
                android:textSize="14sp"
                app:fontFamily="@font/roboto_bold" />
        </RelativeLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/layoutHeader">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="25dp">

                <RelativeLayout
                    android:id="@+id/subjectWrapper"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/subjectTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginTop="12dp"
                        android:fontFamily="@font/roboto_bold"
                        android:letterSpacing="0.04"
                        android:text="@string/subject"
                        android:textColor="@color/colorZambezi"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/redStar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_marginStart="6dp"
                        android:layout_marginTop="11dp"
                        android:layout_toEndOf="@+id/subjectTitle"
                        android:fontFamily="@font/roboto_medium"
                        android:text="@string/red_star"
                        android:textColor="@color/colorRoman"
                        android:textSize="10sp"
                        app:layout_constraintStart_toEndOf="@+id/subjectTitle" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/layoutTicketForm"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/subjectWrapper">

                    <EditText
                        android:id="@+id/txtSubject"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginTop="16dp"
                        android:background="@drawable/subject_editbox"
                        android:elevation="3dp"
                        android:hint="@string/subject_hint"
                        android:letterSpacing="0.05"
                        android:paddingStart="16dp"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp"
                        android:shadowColor="@color/colorBlackRussian"
                        android:textColor="@color/colorSuvaGray"
                        android:textSize="10sp"
                        app:fontFamily="@font/roboto_medium" />

                    <TextView
                        android:id="@+id/txtSubjectError"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/txtSubject"
                        android:layout_alignParentStart="true"
                        android:layout_marginTop="6dp"
                        android:fontFamily="@font/roboto_medium"
                        android:letterSpacing="0.06"
                        android:text="@string/error_field"
                        android:textColor="@color/colorMabel"
                        android:textSize="10sp"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/txtNarrationTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/txtSubjectError"
                        android:layout_alignParentStart="true"
                        android:layout_marginTop="44dp"
                        android:fontFamily="@font/roboto_bold"
                        android:letterSpacing="0.05"
                        android:text="@string/complaint"
                        android:textColor="@color/colorZambezi"
                        android:textSize="12sp" />

                    <EditText
                        android:id="@+id/txtNarration"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/txtNarrationTitle"
                        android:layout_alignParentStart="true"
                        android:layout_marginTop="16dp"
                        android:background="@drawable/subject_editbox"
                        android:elevation="3dp"
                        android:gravity="top|left"
                        android:hint="@string/subject_hint"
                        android:inputType="textMultiLine"
                        android:letterSpacing="0.05"
                        android:minLines="10"
                        android:paddingStart="16dp"
                        android:paddingTop="8dp"
                        android:paddingEnd="16dp"
                        android:shadowColor="@color/colorBlackRussian"
                        android:textColor="@color/colorSuvaGray"
                        android:textSize="10sp"
                        app:fontFamily="@font/roboto_medium" />


                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/layoutActionButtons"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/layoutTicketForm"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="56dp">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnSubmit"
                        android:layout_width="wrap_content"
                        android:layout_height="38dp"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:backgroundTint="@color/colorSummerSky"
                        android:fontFamily="@font/roboto_bold"
                        android:letterSpacing="0.06"
                        android:paddingStart="15dp"
                        android:paddingEnd="15dp"
                        android:text="@string/submit"
                        android:textSize="10sp"
                        app:cornerRadius="@dimen/submit_button_radius" />

                </RelativeLayout>
            </RelativeLayout>
        </ScrollView>
    </RelativeLayout>
</FrameLayout>