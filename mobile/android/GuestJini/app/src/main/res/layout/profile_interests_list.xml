<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/myInterestsItemList"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="32dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:id="@+id/myInterestsRelativeLayout"
            android:layout_width="330dp"
            android:layout_height="37dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="0dp"
            android:background="@drawable/add_to_favourite"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/mainCategory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="17dp"
                android:layout_marginLeft="17dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="6dp"
                android:letterSpacing="0.1"
                android:text="TextView"
                android:textColor="#747474"
                android:textSize="12dp"
                app:fontFamily="@font/roboto" />

            <ImageView
                android:id="@+id/dropDownImage"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="25dp"
                android:layout_marginRight="25dp"
                android:layout_marginBottom="6dp"
                app:srcCompat="@drawable/dropdown_icon_mdpi" />


        </RelativeLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/adventureLayout"
            android:layout_width="330dp"
            android:layout_height="220dp"
            android:layout_below="@+id/myInterestsRelativeLayout"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="0dp"
            android:background="@drawable/other_interests"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/myInterestsRelativeLayout">

            <RelativeLayout
                android:id="@+id/interestList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">


                <TextView
                    android:id="@+id/HikingText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="24dp"
                    android:letterSpacing="0.1"
                    android:text="Hiking"
                    android:textColor="#747474"
                    android:textSize="12dp"
                    app:fontFamily="@font/roboto"
                    tools:layout_editor_absoluteX="16dp"
                    tools:layout_editor_absoluteY="22dp" />

                <ImageView
                    android:id="@+id/hikingCheckbox"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="16dp"
                    android:background="@drawable/unchecked_icon_xxhdpi"
                    tools:layout_editor_absoluteX="294dp"
                    tools:layout_editor_absoluteY="20dp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.25dp"
                    android:layout_below="@+id/HikingText"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="16dp"
                    android:background="@color/colorVeryLightGray"
                    tools:layout_editor_absoluteY="38dp"></View>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/interestList1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/interestList">


                <TextView
                    android:id="@+id/BikingText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="24dp"
                    android:letterSpacing="0.1"
                    android:text="Biking"
                    android:textColor="#747474"
                    android:textSize="12dp"
                    app:fontFamily="@font/roboto"
                    tools:layout_editor_absoluteX="16dp"
                    tools:layout_editor_absoluteY="22dp" />

                <ImageView
                    android:id="@+id/bikingCheckBox"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="16dp"
                    android:background="@drawable/unchecked_icon_xxhdpi"
                    tools:layout_editor_absoluteX="294dp"
                    tools:layout_editor_absoluteY="20dp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.25dp"
                    android:layout_below="@+id/BikingText"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="16dp"
                    android:background="@color/colorVeryLightGray"
                    tools:layout_editor_absoluteY="38dp"></View>
            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/interestList2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/interestList1">


                <TextView
                    android:id="@+id/CyclingText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="24dp"
                    android:letterSpacing="0.1"
                    android:text="Cycling"
                    android:textColor="#747474"
                    android:textSize="12dp"
                    app:fontFamily="@font/roboto"
                    tools:layout_editor_absoluteX="16dp"
                    tools:layout_editor_absoluteY="22dp" />

                <ImageView
                    android:id="@+id/cyclingCheckbox"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="16dp"
                    android:background="@drawable/unchecked_icon_xxhdpi"
                    tools:layout_editor_absoluteX="294dp"
                    tools:layout_editor_absoluteY="20dp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.25dp"
                    android:layout_below="@+id/CyclingText"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="16dp"
                    android:background="@color/colorVeryLightGray"
                    tools:layout_editor_absoluteY="38dp"></View>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/interestList3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/interestList2">


                <TextView
                    android:id="@+id/CampingText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="24dp"
                    android:letterSpacing="0.1"
                    android:text="Camping"
                    android:textColor="#747474"
                    android:textSize="12dp"
                    app:fontFamily="@font/roboto"
                    tools:layout_editor_absoluteX="16dp"
                    tools:layout_editor_absoluteY="22dp" />

                <ImageView
                    android:id="@+id/campingCheckbox"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="16dp"
                    android:background="@drawable/unchecked_icon_xxhdpi"
                    tools:layout_editor_absoluteX="294dp"
                    tools:layout_editor_absoluteY="20dp" />


            </RelativeLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>
    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>