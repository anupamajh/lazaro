<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border_top_bottom"
        android:padding="5dp">

        <TextView
            android:id="@+id/txtTicketCategoryName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_toLeftOf="@id/btnExploreTicketCategories"
            android:layout_centerVertical="true"
            android:text="@string/ticket_name"
            android:textColor="@color/colorZambezi1"
            android:textSize="16sp"
            app:fontFamily="@font/roboto_medium" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/btnExploreTicketCategories"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="2dp"
            app:backgroundTint="@color/colorWhite"
            app:fabCustomSize="26dp"
            app:maxImageSize="16dp"
            app:srcCompat="@drawable/ic_navigate_next_black_24dp"
            app:tint="@color/colorBlackRussian" />
    </RelativeLayout>
</FrameLayout>