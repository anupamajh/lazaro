<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/loaderDialogLayout">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        android:background="@drawable/loader_dailog"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingTop="70dp"
        android:paddingBottom="70dp">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/loaderImage"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/loader_image"></com.google.android.material.imageview.ShapeableImageView>

        <TextView
            android:id="@+id/pleaseWait"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:fontFamily="@font/roboto"
            android:letterSpacing="0.05"
            android:text="@string/please_wait"
            android:gravity="center"
            android:textColor="@color/colorDimGray"
            android:textSize="14sp">

        </TextView>
    </LinearLayout>
</RelativeLayout>