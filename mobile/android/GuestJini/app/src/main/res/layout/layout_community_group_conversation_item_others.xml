<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="90dp"
        android:background="@drawable/message_container"
        android:paddingBottom="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/txtDateAndTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:letterSpacing="0.05"
            android:text="@string/dateTime"
            android:textColor="@color/colorSuvaGray"
            android:textSize="9sp"
            app:fontFamily="@font/roboto_medium" />

        <TextView
            android:id="@+id/txtMemberName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtDateAndTime"
            android:layout_alignParentStart="true"
            android:layout_marginStart="16dp"
            android:layout_marginTop="3dp"
            android:letterSpacing="0.06"
            android:text="@string/member_name"
            android:textColor="@color/colorZambezi1"
            android:textSize="10sp"
            app:fontFamily="@font/roboto_medium" />

        <TextView
            android:id="@+id/txtMessage"
            android:layout_width="246dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtMemberName"
            android:layout_alignParentStart="true"
            android:layout_marginStart="16dp"
            android:layout_marginTop="10dp"
            android:letterSpacing="0.05"
            android:lineSpacingExtra="2dp"
            android:text="@string/message"
            android:textColor="@color/colorDimGray"
            android:textSize="10sp"
            app:fontFamily="@font/roboto_medium" />
    </RelativeLayout>
</FrameLayout>